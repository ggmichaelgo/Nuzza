body
{
	min-height: 679px;
	min-width: 1124px;
}

html
{
	height: 100%;
}

body
{
	background-image: url('/assets/cover-photo.jpg');
	background-size: cover;
	background-attachment: fixed;
}

@font-face
{
	font-family: 'LeckerliOne-Regular';
	src: url(<%= asset_path 'LeckerliOne-Regular.otf' %>);
}

.zone
{
	width: 100%;
	height: 100%;
	min-width: 960px;
	min-height: 400px;
	overflow: hidden;
}

.category, .subcategory
{
	display: inline-block;
	width: 220px;
	/*width: 20%;*/
	height: 290px;
	background-color: rgba(20,20,20,0.9);
	margin-right: 16px;
	padding: 20px 10px 10px 10px;
	cursor: pointer;
}

.category .img-circle, .subcategory .img-circle
{
	width: 160px;
	height: 150px;
}

.category p, .subcategory p
{
	padding-top: 50px;
	font-weight: bold;
	color: white;
	font-size: 15px;
	word-spacing: 4px;
}

.article-item
{
	margin-bottom: 30px;
	padding: 1px 12px;
	background-color: rgba(255,255,255,0.8);
	cursor: pointer;
}

.article-item img
{
	vertical-align: top;
	width: 128px;
	height: 128px;
}

.article-item h2
{
	display: inline-block;
	width: 380px;
}
